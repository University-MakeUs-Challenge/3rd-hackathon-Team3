<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#F1F1F1"
    >
    <TextView
        android:id="@+id/zero_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mm님의\n개성적인 명함을 제작해 보세요!"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        />
    <!-- 내 명함 만들기  -->
    <RelativeLayout
        android:id="@+id/zero_my"
        android:background="@drawable/round_corner_my"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/zero_intro"
        android:layout_marginTop="40dp"
        android:paddingTop="23dp"
        android:paddingLeft="21dp"
        android:paddingBottom="23dp"
        >
        <TextView
            android:id="@+id/my_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 명함 만들기"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/my_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“나”를 가장 잘 소개할 수 있는 명함을 만들어 보세요."
            android:layout_below="@+id/my_title"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/my_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# 나를 나답게"
            android:layout_below="@+id/my_content"
            android:layout_marginTop="14dp"
            android:textColor="#00D282"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/mickey"
            android:layout_below="@+id/my_tag"
            android:layout_marginLeft="245dp"
            />
    </RelativeLayout>
    <!-- 친구 명함 만들기  -->
    <RelativeLayout
        android:id="@+id/zero_friend"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/round_corner_friend"
        android:layout_below="@+id/zero_my"
        android:layout_marginTop="50dp"
        android:paddingTop="23dp"
        android:paddingLeft="21dp"
        android:paddingBottom="23dp"
        >
        <TextView
            android:id="@+id/friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 명함 만들기"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/friend_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 만들어주는 내 “친구”의 명함"
            android:layout_below="@+id/friend_title"
            android:layout_marginTop="17dp"
            />
        <TextView
            android:id="@+id/friend_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 보는 친구의 모습을 표현해 보세요."
            android:layout_below="@+id/friend_content1"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/friend_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# 내 친구는 이런 사람이에요"
            android:layout_below="@+id/friend_content2"
            android:layout_marginTop="10dp"
            android:textColor="#FFF383"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/mickey"
            android:layout_below="@+id/friend_content2"
            android:layout_marginLeft="245dp"
            />
    </RelativeLayout>
</RelativeLayout>